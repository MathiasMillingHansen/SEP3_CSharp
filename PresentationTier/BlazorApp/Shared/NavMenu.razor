<div class="top-row ps-3 navbar navbar-dark d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center">
        <img src="Imgs/SEP3logo.png" alt="logo" class="logo-img">
        <a class="navbar-brand" href="#">SU'ens mange sider</a>
    </div>
    <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="SellBook">
                <RadzenIcon Icon="add_shopping_cart" style="margin-right: 5px;"/>
                <span>Sell book</span>
            </NavLink>
        </div>
       <div class="nav-item px-3">
           <NavLink class="nav-link" href="BookCatalog">
               <RadzenIcon Icon="chrome_reader_mode" style="margin-right: 5px;" />
               <span>Book catalog</span>
           </NavLink>
       </div>
        <div class="nav-item px-3 nav-item dropdown show">
            <NavLink class="nav-link dropdown-toggle" @onclick="() => expandSubNavSettings = !expandSubNavSettings" id="navbarDropdown" >
                 <RadzenIcon Icon="account_circle" style="margin-right: 5px;" />
                 <span>My profile</span>
            </NavLink>
            @if (expandSubNavSettings)
            {
                <div class="dropdown-menu show" aria-labelledby="navbarDropdown" style="background-color: RGB(150, 203, 134);" @onclick="() => expandSubNavSettings = !expandSubNavSettings ">
                    <div class="nav-item">
                        <NavLink class="nav-link text-white" href="EditProfile">
                            <span class="oi oi-fork" aria-hidden="true"></span> Edit profile
                        </NavLink>
                    </div>
                    <div class="nav-item">
                        <NavLink class="nav-link text-white" href="minebøger">
                            <span class="oi oi-command" aria-hidden="true"></span> My books
                        </NavLink>
                    </div>
                </div>
            }
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    string NavMenuCssClass => baseMenuClass + (collapseNavMenu ? " collapse" : "");

    void ToggleNavMenu()
    {
        if(!expandSubNavSettings)
        {
            collapseNavMenu = !collapseNavMenu;
        }
    }

    private bool expandSubNavSettings;


    string baseMenuClass = "navbar-collapse d-sm-inline-flex flex-sm-row-reverse";
    
    

}