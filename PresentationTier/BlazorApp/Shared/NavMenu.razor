<div class="top-row ps-3 navbar navbar-dark d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center">
        <img src="Imgs/SEP3logo.png" alt="logo" class="logo-img">
        <a class="navbar-brand" href="#">SU'ens mange sider</a>
    </div>
    <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="SellBook">
                <span class="oi oi-plus" aria-hidden="true"></span> Sell Book
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="BookCatalog">
                <span class="oi oi-plus" aria-hidden="true"></span> Bog katalog
            </NavLink>
        </div>
        <div class="nav-item px-3 nav-item dropdown show">
            <NavLink class="nav-link dropdown-toggle" @onclick="() => expandSubNavSettings = !expandSubNavSettings" id="navbarDropdown" >
                <span class="oi oi-list-rich" aria-hidden="true"></span> Min profil
            </NavLink>
            @if (expandSubNavSettings)
            {
                <div class="dropdown-menu show" aria-labelledby="navbarDropdown" style="background-color: RGB(60, 128, 67);" @onclick="() => expandSubNavSettings = !expandSubNavSettings ">
                    <div class="nav-item">
                        <NavLink class="nav-link text-dark" href="redigerprofil">
                            <span class="oi oi-fork" aria-hidden="true"></span> Rediger profil
                        </NavLink>
                    </div>
                    <div class="nav-item">
                        <NavLink class="nav-link text-dark" href="minebøger">
                            <span class="oi oi-command" aria-hidden="true"></span> Mine bøger
                        </NavLink>
                    </div>
                </div>
            }
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    string NavMenuCssClass => baseMenuClass + (collapseNavMenu ? " collapse" : "");

    void ToggleNavMenu()
    {
        if(!expandSubNavSettings)
        {
            collapseNavMenu = !collapseNavMenu;
        }
    }

    private bool expandSubNavSettings;


    string baseMenuClass = "navbar-collapse d-sm-inline-flex flex-sm-row-reverse";
    
    

}